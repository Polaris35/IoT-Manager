{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "generate-proto.js"]
}
