{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@iot-manager/proto/types": ["packages/iot-manager/proto/src/generated"],
      "@iot-manager/proto/types/*": [
        "packages/iot-manager/proto/src/generated/*"
      ],
      "@iot-manager/proto": ["packages/iot-manager/proto/src"],
      "@iot-manager/proto/*": ["packages/iot-manager/proto/src/*"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules"]
}
